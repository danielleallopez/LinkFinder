<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".component.link_list.LinkListFragment">

    <TextView
        android:id="@+id/txt_fragment_link_list_title"
        style="@style/link_list_title"/>

    <TextView
        android:id="@+id/txt_fragment_link_list_quantity"
        style="@style/link_list_subtitle"
        android:text="@string/link_list_subtitle_format"/>

    <include layout="@layout/line_horizontal"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_links"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="LinearLayoutManager"/>

</LinearLayout>
