<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/parent_row_link_item"
    style="@style/match_width"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_link_list_item"
        style="@style/link_list_img"
        android:contentDescription="@string/link_list_img_description"/>

    <TextView
        android:id="@+id/txt_link_list_item_title"
        style="@style/match_width"
        android:textAppearance="?attr/textAppearanceListItem"/>
</LinearLayout>